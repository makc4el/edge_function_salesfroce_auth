{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom", "deno.ns"],
    "strict": true,
    "exactOptionalPropertyTypes": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "std/": "https://deno.land/std@0.168.0/"
  }
}
